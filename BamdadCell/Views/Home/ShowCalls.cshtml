@model IEnumerable<Repository.DTO.CallsViewModel>

@{
    ViewBag.Title = "ShowCalls";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>تماس ها</h2>

<p>
    @Html.ActionLink("تماس جدید", "Call")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CallDuration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reciver)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CallDuration) دقیقه
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reciver)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
   
    </tr>
}

</table>
